{
  "scripts": {
    "start": "npx snowpack@$npm_package_snowpack_version dev",
    "build": "npx snowpack@$npm_package_snowpack_version build"
  },
  "snowpack": {
    "version": "3.0.11",
    "mount": {
      "src": "/"
    },
    "buildOptions": {
      "out": "public",
      "clean": true
    },
    "devOptions": {
      "open": "none",
      "hmr": false
    },
    "packageOptions": {
      "source": "remote"
    }
  }
}
